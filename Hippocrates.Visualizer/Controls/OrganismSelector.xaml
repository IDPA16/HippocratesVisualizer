<Grid x:Class="Hippocrates.Visualizer.Controls.OrganismSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hippocrates.Visualizer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" 
             d:DesignWidth="300">

    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"></ColumnDefinition>
        <ColumnDefinition Width="*"></ColumnDefinition>
        <ColumnDefinition Width="*"></ColumnDefinition>
    </Grid.ColumnDefinitions>

    <local:TitledListView Grid.Column="0" Title="Organism"></local:TitledListView>
    <local:TitledListView Grid.Column="1" Title="Species"></local:TitledListView>
    <local:TitledListView Grid.Column="2" Title="Generation"></local:TitledListView>
</Grid>
